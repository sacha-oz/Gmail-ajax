<h1>Emails#index</h1> 


<header>
</header>



<div class="container">

	<div class="btn btn-primary m-2">
  	<%= link_to "Recevoir un email", emails_path, class: "text-white", method: :post, remote: true %>

	</div>

	<div class="d-flex" style="border:3px solid black">

		<div class="flex-fill" style="border:1px solid red">
			<h2> Email objects </h2>
			<ul class="list-group" id="email-objects">
				<% @emails.each do |email| %>
				<li class="list-group-item"> <%= link_to email.object, email_path(email.id), remote:true %> </li>
				<% end %>
			</ul>

		</div>



		<div class="flex-fill" style="border:1px solid blue">
			<h2> Content of email </h2>
			<p id="email-contents"> </p>
		</div>
		




	</div>

</div>